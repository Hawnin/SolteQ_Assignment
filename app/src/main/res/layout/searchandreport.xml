<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/TextViewSalary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/ButtonSortDESC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:text="SortDESC"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/ButtonClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:layout_alignBaseline="@+id/ButtonSortDESC"
            android:layout_alignBottom="@+id/ButtonSortDESC"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="31dp" />

        <Button
            android:id="@+id/ButtonSortASC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="SortASC"
            android:layout_alignBaseline="@+id/ButtonClose"
            android:layout_alignBottom="@+id/ButtonClose"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_alignEnd="@+id/TextViewSalary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="444dp"
            android:id="@android:id/list"
            />

    </LinearLayout>

</RelativeLayout>